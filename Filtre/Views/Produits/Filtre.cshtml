@model List<Produit>

@{
    ViewBag.Title = "Produits";
}

<h2>Produits</h2>

<form method="get" action="@Url.Action("Filtre")">
    <div>
        <label>Nom:</label>
        <input type="text" name="nom" value="@ViewBag.Nom" />
    </div>
    <div>
        <label>Cout:</label>
        <input type="number" name="cout" value="@ViewBag.Cout" step="0.01" />
    </div>
    <div>
        <label>Categorie:</label>
        <input type="text" name="categorie" value="@ViewBag.Categorie" />
    </div>
    <div>
        <button type="submit">Filtrer</button>
    </div>
</form>

<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Cout</th>
            <th>Categorie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Nom</td>
                <td>@produit.Cout</td>
                <td>@produit.Categorie</td>
            </tr>
        }
    </tbody>
</table>
